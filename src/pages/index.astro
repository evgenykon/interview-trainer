---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="Interview trainer">
	<main class="container">
		<Navbar />

		<h1 class="is-size-1 mb-5">Interview</h1>

		<h2 class="is-size-2 mb-2">Composing</h2>
		<div class="card mb-5">
			<div class="card-content">
			  <div class="content columns">
				<div class="column is-three-quarters">
					<textarea class="textarea" rows="10"></textarea>
					<div class="control mt-1">
						<label class="radio">
							<input type="radio" name="foobar">
							Starting question
						</label>
						<label class="radio">
							<input type="radio" name="foobar" checked>
							Finishing question
						</label>
					</div>
					<div class="control mt-3">
						<button class="button is-small is-primary is-rounded is-outlined">Submit</button>
						<button class="button is-small is-danger is-rounded is-outlined">Delete</button>
					</div>
				</div>
				<div class="column">
					<nav class="panel">
						<div class="panel-block">
							<button class="button is-link is-outlined">
								New question
							</button>
						</div>
						<a class="panel-block is-active">
						  <span class="panel-icon">
							<i class="fas fa-book" aria-hidden="true"></i>
						  </span>
						  bulma
						</a>
					</nav>
				</div>
			  </div>
			</div>
		</div>

		<h2 class="is-size-2 mb-2">Testing</h2>
		<div class="card">
			<div class="card-content">
			  <div class="content">
				  <button class="button is-primary">Start</button>
				  <button class="button is-outlined">Pause</button>
				  <button class="button is-danger is-outlined">Abort</button>
			  </div>
			</div>
		</div>
	</main>
</Layout>